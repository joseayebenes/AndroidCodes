<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LytContenedor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:baselineAligned="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:id="@+id/TxtExito"
        android:layout_gravity="center_horizontal"
        android:text="Tester: Jeronimo Diaz"
        android:visibility="invisible"
        android:layout_above="@+id/BtnMostrar"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostrar"
        android:id="@+id/BtnMostrar"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/ListAnadir"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="314dp"
        android:id="@+id/ListAnadir"
        android:layout_gravity="center_horizontal"
        android:choiceMode="singleChoice"
        android:layout_above="@+id/TxtAnadir"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/background_test" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TxtAnadir"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_above="@+id/BtnAnadir"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AÃ±adir"
        android:id="@+id/BtnAnadir"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/BtnMostrar"
        android:layout_toStartOf="@+id/BtnMostrar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:id="@+id/BtnEliminar"
        android:layout_gravity="right"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/BtnMostrar"
        android:layout_toEndOf="@+id/BtnMostrar"
        android:onClick="deleteSelectedItem" />

</RelativeLayout>
